- width = donationWidth()
- if width < 100
  - status = (width > 50) ? "info" : "danger"
  .alert{class: "alert-#{status}",:role => "alert",:style => "margin-top: 15px;"}
    %b Welcome to the Diaspora* Network! If you like it support us
    = succeed "." do
      %a.alert-link{:href => "http://zauberstuhl.de/donate", :target => "_blank"} with a small donation
    - if width > 0
      .progress{:style => "margin: 5px 0 5px 0;"}
        .progress-bar{class: "progress-bar-#{status}",
          "aria-valuemax" => "100", "aria-valuemin" => "0",
          "aria-valuenow" => "#{width}", :role => "progressbar",
          :style => "width:#{width}%"}
          #{width}%
    %a.btn.media-object{class: "btn-#{status}",
      :href => "http://zauberstuhl.de/donate",
      :role => "button", :style => "color:#fff",
      :target => "_blank"} Donate
- else
  %a.btn.media-object{class: "btn-primary",
    :href => "http://zauberstuhl.de/donate", :role => "button",
    :style => "color: #fff; margin-top: 15px;",
    :target => "_blank"} &hearts; #{width}%
